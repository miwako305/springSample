<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--　【13-3】:<mapper>　↓のようにnameSpace属性にパッケージ名を含めたクラス名を指定します -->
<mapper namespace="com.example.SpringSample.recipe.repository.login.mybatis.UserMapper2">
    <!-- 【13-3】:マッピング定義
    resultMap type="<クラス名>"　is="<マッピング名>"
    id column="<プライマリーキーのカラム名>"　property="<javaクラスのフィールド名>">
    result column="<プライマリーキーのカラム名>"　property="<javaクラスのフィールド名>"
    -->
    <resultMap type="com.example.SpringSample.recipe.domain.login.model.User" id="user">
        <id column="user_id" property="userId" />
        <result column="password" property="password" />
        <result column="user_name" property="userName" />
        <result column="birthday" property="birthday" />
        <result column="age" property="age" />
        <result column="marriage" property="marriage" />
        <result column="role" property="role" />
    </resultMap>

    <!-- １件insert -->
    <insert id="insert" parameterType="com.example.SpringSample.recipe.domain.login.model.User">
        INSERT INTO m_user (
            user_id,
            password,
            user_name,
            birthday,
            age,
            marriage,
            role)
        VALUES (
            #{userId},
            #{password},
            #{userName},
            #{birthday},
            #{age},
            #{marriage},
            #{role})
    </insert>

    <!-- 【13-3】: resultType
    SQLの結果を受け取るにはresultType属性を使用します。
    select結果は自動的にUserクラスにMappingされます。-->
    <!-- １件検索 -->
    <select id="selectOne" parameterType="string" resultType="com.example.SpringSample.recipe.domain.login.model.User">
        SELECT
            user_id,
            password,
            user_name,
            birthday,
            age,
            marriage,
            role
        FROM
            m_user
        WHERE
            user_id = #{userId}
    </select>

    <!-- 【13-3】: マッピング定義
    独自に作成したクラスとselect結果が一致しい場合、マッピング定義を使います。
    resultMap=<マッピング名>　-->
    <!-- 全件検索 -->
    <select id="selectMany" resultMap="user">
        SELECT
            user_id,
            password,
            user_name,
            birthday,
            age,
            marriage,
            role
        FROM
            m_user
    </select>
    <!-- １件更新 -->
    <update id="updateOne" parameterType="com.example.SpringSample.recipe.domain.login.model.User">
        UPDATE m_user
        SET
            password = #{password},
            user_name = #{userName},
            birthday = #{birthday},
            age = #{age},
            marriage = #{marriage}
        WHERE user_id = #{userId}
    </update>

    <!-- １件削除 -->
    <delete id="deleteOne" parameterType="string">
        DELETE FROM m_user WHERE user_id = #{userId}
    </delete>
</mapper>