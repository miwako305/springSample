<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--　【13-3】:<mapper>　↓のようにnameSpace属性にパッケージ名を含めたクラス名を指定します -->
<mapper namespace="com.example.SpringSample.recipe.repository.recipelist.mybatis.RecipeMapper">
    <select id="selectALL" resultType="com.example.SpringSample.recipe.domain.recipelist.model.Recipe">
        SELECT
        menu_id,
        menu_name,
        menu_memo,
        update_time
        FROM
        m_recipes
    </select>
</mapper>